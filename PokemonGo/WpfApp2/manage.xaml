<Window x:Class="PokemonGo.manage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="Manage Pokemon/Collection" Height="450" Width="800">
    <Grid>
        <Image Margin="188,-187,187.6,-185" Source="PgXHOnv.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="90"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Left" Width="250">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="231" Height="410">
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">Scrolling is enabled when it is necessary. 
      Resize the window, making it larger and smaller.</TextBlock>
                <Button BorderThickness="0" Background="{x:Null}" Margin="0,0,172,116.4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="ButtonConfirmSwitchPokemon">
                    <StackPanel>
                        <DockPanel Margin="5,0,0,5">
                            <TextBlock Foreground="#FFFFFF" VerticalAlignment="Bottom" TextWrapping="Wrap" Text="CP" Width="16" FontSize="10" FontWeight="Light"/>
                            <TextBlock Foreground="#FFFFFF" VerticalAlignment="Bottom" TextWrapping="Wrap" Text="1485" FontSize="14" FontWeight="Medium"/>
                        </DockPanel>
                        <Canvas>
                            <Image Width="140" Height="140" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                <Image.OpacityMask>
                                    <ImageBrush ImageSource="3a-b__003__xy.gif" Stretch="None"/>
                                </Image.OpacityMask>
                            </Image>
                        </Canvas>
                        <Rectangle Stroke="#FF16E7DA" HorizontalAlignment="Center" Height="60" RadiusY="5" RadiusX="5" Width="60">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="battle_poke_1.gif" Stretch="None">
                                    <ImageBrush.RelativeTransform>
                                        <TransformGroup>
                                            <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="0.8" ScaleY="0.8"/>
                                        </TransformGroup>
                                    </ImageBrush.RelativeTransform>
                                </ImageBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Foreground="#FFFFFF" VerticalAlignment="Bottom" TextWrapping="Wrap" Text="Vaporeon" FontSize="10" FontWeight="Light" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </ScrollViewer>


        <Grid x:Name="GridChangePokemon" Margin="0,0,20,30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="500">
            <Rectangle Fill="#FFFFFF" HorizontalAlignment="Left" Height="278" RadiusY="5" RadiusX="5" VerticalAlignment="Top" Width="500"/>
            <Image gif:ImageBehavior.AnimatedSource="Images/battle/front.gif" VerticalAlignment="Top" Stretch="None" Margin="0,-44,0,0"/>
            <TextBlock Foreground="#45686e" HorizontalAlignment="Center" Margin="223,43,223,0" TextWrapping="Wrap" Text="Pikichu" VerticalAlignment="Top" Height="18" FontSize="16"/>

            <Rectangle Fill="Black" HorizontalAlignment="Center" Height="9" VerticalAlignment="Top" Width="280" RadiusX="5" RadiusY="5" Opacity="0.5" Margin="110,73,110,0"/>
            <Rectangle Fill="LightGreen" HorizontalAlignment="Center" Height="9" VerticalAlignment="Top" Width="149" RadiusX="5" RadiusY="5" Margin="110,73,241,0"/>


            <Button BorderThickness="0" Background="{x:Null}" Width="40" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="ButtonCloseSwitchPokemon" Margin="0,0,0,15.4">
                <StackPanel>
                    <Image Source="button_tick.png" Width="30" Height="30" />
                </StackPanel>
            </Button>
        </Grid>
        <TextBlock Foreground="#45686e" HorizontalAlignment="Center" Margin="307,257,396.6,0" TextWrapping="Wrap" Text="STARDUST" VerticalAlignment="Top" Height="18" FontSize="16" Width="90"/>
        <TextBlock Foreground="#45686e" HorizontalAlignment="Center" Margin="307,282,396.6,0" TextWrapping="Wrap" Text="CANDY" VerticalAlignment="Top" Height="18" FontSize="16" Width="90"/>
        <TextBlock Foreground="#45686e" HorizontalAlignment="Center" Margin="307,305,396.6,0" TextWrapping="Wrap" Text="SKILL 1" VerticalAlignment="Top" Height="18" FontSize="16" Width="90"/>


    </Grid>
</Window>

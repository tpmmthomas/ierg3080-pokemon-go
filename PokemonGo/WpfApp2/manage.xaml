<Window x:Class="PokemonGo.Manage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:pokemongo="clr-namespace:PokemonGo" xmlns:controls="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        Title="Manage Pokemon/Collection" Height="450" Width="800">
    <Grid>
        <Image Margin="188,-187,187.6,-185" Source="PgXHOnv.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="90"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Left" Width="250">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="231" Height="410">
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">Scrolling is enabled when it is necessary. 
      Resize the window, making it larger and smaller.</TextBlock>
                <controls:UniformGrid Columns="3">
                    <Button BorderThickness="0" Background="{x:Null}" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                        <pokemongo:PokemonSingleViewTiny PokemonName="Pokemon Name" PokemonCP="1234" Loaded="PokemonSingleViewTiny_Loaded"/>
                    </Button>
                </controls:UniformGrid>
            </StackPanel>
        </ScrollViewer>

        <Grid x:Name="GridChangePokemon" Margin="0,0,20,30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="153*"/>
                <ColumnDefinition Width="347*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Fill="#FFFFFF" HorizontalAlignment="Left" Height="256" RadiusY="5" RadiusX="5" VerticalAlignment="Top" Width="500" Margin="0,22,0,0" Grid.ColumnSpan="2"/>
            <Image gif:ImageBehavior.AnimatedSource="Images/battle/front.gif" VerticalAlignment="Top" Stretch="None" Margin="0,-44,0,0" Grid.ColumnSpan="2"/>
            <TextBlock Foreground="#45686e" HorizontalAlignment="Center" Margin="69.6,43,223,0" TextWrapping="Wrap" Text="Pikichu" VerticalAlignment="Top" Height="18" FontSize="16" Grid.Column="1"/>

            <Rectangle Fill="Black" HorizontalAlignment="Center" Height="9" VerticalAlignment="Top" Width="168" RadiusX="5" RadiusY="5" Opacity="0.5" Margin="18.6,73,160,0" Grid.Column="1"/>
            <Rectangle Fill="LightGreen" HorizontalAlignment="Center" Height="9" VerticalAlignment="Top" Width="87" RadiusX="5" RadiusY="5" Margin="18.6,73,241,0" Grid.Column="1"/>

            <Button BorderThickness="0" Background="{x:Null}" Width="40" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="76.6,0,230,15.4" Grid.Column="1">
                <StackPanel>
                    <Image Source="button_tick.png" Width="30" Height="30" />
                </StackPanel>
            </Button>
        </Grid>
        <TextBlock Foreground="#45686e" HorizontalAlignment="Center" Margin="307,257,396.6,0" TextWrapping="Wrap" Text="STARDUST" VerticalAlignment="Top" Height="18" FontSize="16" Width="90"/>
        <TextBlock Foreground="#45686e" HorizontalAlignment="Center" Margin="307,282,396.6,0" TextWrapping="Wrap" Text="CANDY" VerticalAlignment="Top" Height="18" FontSize="16" Width="90"/>
        <TextBlock Foreground="#45686e" HorizontalAlignment="Center" Margin="550,257,153.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" FontSize="16" Width="90" Text="Ember"/>
        <TextBlock Foreground="#45686e" HorizontalAlignment="Center" Margin="706,257,45.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" FontSize="16" Width="42" Text="10"/>
        <TextBlock Foreground="#45686e" HorizontalAlignment="Center" Margin="550,282,125.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" FontSize="16" Width="118" Text="Flamethrower"/>
        <TextBlock Foreground="#45686e" HorizontalAlignment="Center" Margin="706,282,45.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" FontSize="16" Width="42" Text="50"/>
        <Image Margin="307,153,372.6,228" Source="Images/manage/powerup.png"/>
        <Image Margin="307,197,372.6,184" Source="Images/manage/evolve.png"/>
        <Image Margin="634,153,45.6,228" Source="Images/manage/rename.png"/>
        <Image Margin="634,197,45.6,184" Source="Images/manage/sell.png"/>
        <Image Margin="419,16,167.6,297" HorizontalAlignment="Center" Source="Images/manage/arch.png" Width="207"/>
        <Ellipse Width="10" Height="10" Fill="White" Margin="0,227,368.6,183" RenderTransformOrigin="11.191,0.211" HorizontalAlignment="Right">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform Y="-110"/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <TextBlock Foreground="#45686e" HorizontalAlignment="Center" Margin="456,257,295.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" FontSize="16" Width="42" Text="5000"/>


    </Grid>
</Window>
